{
  "version": 2,

  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" }
  ],
  "env": {
    "MONGODB_URI": "@mongouri",
    "NEXTAUTH_SECRET": "@nextauth-secret",
    "FRONTEND_URL": "@frontend-url"
  }
}
